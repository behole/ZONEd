{
  "name": "dropzone-app",
  "version": "1.0.0",
  "description": "Personal Data PWA - Universal Content Dropzone",
  "scripts": {
    "install:all": "cd client && npm install && cd ../server && npm install",
    "prebuild": "npm run install:all",
    "build": "cd client && npm run build",
    "postbuild": "echo 'Build complete - client built, server ready'",
    "start": "cd server && npm start",
    "start:production": "cd server && npm start",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm start",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\""
  },
  "keywords": ["pwa", "dropzone", "personal-data"],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}